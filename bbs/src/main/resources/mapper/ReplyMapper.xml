<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<!-- java source의 replyMapper의 경로 적용 -->
<mapper namespace="com.myapp.bbs.dao.ReplyMapper">

	<!-- 댓글 등록 -->
	<select id="enroll" resultType="ReplyVO"> <!-- 결과를 ReplyVO에 담아 리턴 -->
		insert into reply(reply_bno,content, writer) values (#{reply_bno}, #{content}, #{writer})
	</select>

	<!-- 댓글 목록 (게시글 번호가 필요) -->
	<select id="getReplyList" resultType="ReplyVO">
	
		select * from reply where reply_bno = #{reply_bno}
	
	</select>

	<!-- 게시판 수정 -->
    <update id="modify">
        update reply set content = #{content}, updated_at = now() where reply_no = #{reply_no}
    </update>

	  <!-- 게시판 삭제 -->
    <delete id="delete">
    
        delete from reply where reply_no = #{reply_no}
    
    </delete>
    

    
</mapper>